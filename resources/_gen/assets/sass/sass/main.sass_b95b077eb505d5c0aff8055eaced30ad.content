.main__header{width:100%;height:96px;padding-block:16px;padding-inline:32px;background:url(/images/header.png)}.main__header img{height:100%}.main__menu{width:100%;background-color:#fff;margin-bottom:64px}.main__menu ul{list-style:none;display:flex;flex-direction:row;gap:16px;padding-left:32px;padding-block:8px;margin:0}.main__menu li{font-size:16px}.index__container{display:grid;grid-template-columns:repeat(2,1fr);grid-template-rows:1fr auto;grid-column-gap:32px;grid-row-gap:32px}.index__container--item{background-color:#fff;border-style:solid;border-width:1.5px;border-color:#707070;padding:8px}.index__container--item h2{margin:0}.index__container--item.div1{grid-area:1/1/2/2}.index__container--item.div2{grid-area:2/1/3/2}.index__container--item.div3{grid-area:1/2/3/3}.article__container{background-color:#fff;border-radius:8px;padding:16px 32px;min-height:768px}*{font-family:dotgothic16,sans-serif;box-sizing:border-box;color:#707070}body:not(#is-404){margin:0;background:url(/images/bg.png)}.main__container{margin:auto;max-width:768px}